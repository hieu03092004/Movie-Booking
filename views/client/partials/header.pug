header.header
    .container-fluid(class="login-register")
        .col-12
            .inner-menu
                ul  
                    if(userName)
                        li
                            a(href="/user/profile:id" style="color:#fff") Xin chào #{userName}
                        li 
                            a(href="user/logout") Đăng xuất
                    else
                        li
                            a(href="/user/register") Đăng ký
                        li
                            a(href="/user/login") Đăng nhập

    .container
        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/cgvlogo.png", alt="Logo") 

            .col-3
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa"
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm
            .col-6
                .inner-menu
                    ul
                        li
                            a(href="/") Trang chủ
                        li
                            a(href="/movies") All movie
                        li
                            a(href="/about") About Us
                        li
                            a(href="/feedback") Feedback
                        li
                            a(href="/contact") Contact
