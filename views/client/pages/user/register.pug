doctype html
html 
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css')
        link(rel="stylesheet", href="/css/register.css")
        title  Trang Đăng ký
    body
        section.container 
            header Tạo tài khoản
            form.form(
                action="/user/register"
                method="POST"
            )   
                .input-box
                    label Tên đăng nhập 
                    input(
                        placeholder="Tên đăng nhập"
                        type="text"
                        id="userName"
                        name="userName"
                        required
                    )
                .input-box
                    label Email
                    input(
                    placeholder="Nhập Email"
                    type="text"
                    id="email"
                    name="email"
                    required
                )
                .input-box
                    label Địa chỉ
                    input(
                        type="text"
                        id="address"
                        name="address"
                        placeholder="Địa chỉ"
                        required
                    )
                .input-box
                    label Giới tính
                    input(
                        type="text"
                        id="gender"
                        name="gender"
                        placeholder="Giới tính"
                        required
                    )
                .column
                    .input-box
                        label Ngày sinh 
                        input(
                            type="date"
                            class="form-control"
                            id="date_of_birth"
                            name="date_of_birth"
                            placeholder="Nhập ngày sinh"
                            required
                        )
                    .input-box
                        label Số điện thoại
                        input(type="text", id="phone", name="phone",placeholder="Số điện thoại")
                .input-box.address
                    label Ảnh
                    input(
                        placeholder="Ảnh"
                        type="text"
                        class="form-control"
                        id="avatar"
                        name="avatar"
                        required
                    )
                    input(type="password", id="password", name="password",placeholder="Nhập mật khẩu",required)
                    .column
                        input(
                        placeholder="Nhập họ"
                        type="text"
                        class="form-control"
                        id="firstName"
                        name="firstName"
                        required
                        )
                        input(type="text", id="lastName", name="lastName",placeholder="Tên" required )
                button(type="submit") Đăng ký
                    