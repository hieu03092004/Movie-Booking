include ../../mixin/alert.pug
doctype html
html 
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(link rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css')
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet", href="/css/login.css")
        title Đặt lại mật khẩu
    body
        +alert-error(5000)
        #container.container
            .form-container.sign-in
                form(
                    action="/user/password/reset"
                    method="POST"
                )
                    h1 Đổi mật khẩu
                    .social-icons
                        a.icon(href='#')
                            i.fa-brands.fa-google-plus-g
                        a.icon(href='#')
                            i.fa-brands.fa-facebook-f
                        a.icon(href='#')
                            i.fa-brands.fa-github
                        a.icon(href='#')
                            i.fa-brands.fa-linkedin-in
                    span sử dụng email của bạn để đổi mật khẩu
                    input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        required
                        placeholder="Email"
                    )
                    input(
                        type="password"
                        id="password"
                        name="password"
                        required
                        placeholder="Mật khẩu mới"
                    )
                    input(
                        type="password"
                        id="confirmPassword"
                        name="confirmPassword"
                        required
                        placeholder="Xac nhận mật khẩu"
                    )
                    button(
                        type="submit"
                    ) Đổi mật khẩu
            .toggle-container
                .toggle
                    .toggle-panel.toggle-left
                        h1 Xin chào,
                        p Bạn đã có tài khoản??
                            button#login.hidden(type="submit") Đăng nhập
                    .toggle-panel.toggle-right
                        h1 Xin chào,
                        p Bạn chưa có tài khoản?
                        button#register.hidden(type="submit")
                            a(href="/user/register" style="color:#fff") Đăng ký
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js")
        script(src="/js/script.js")