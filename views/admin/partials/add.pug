mixin Add(columns, slug)
  .add
    .modal
      span.close(onclick="handleOpen(false)") X
      h1= slug === 'users' ? 'Add New User' : slug === 'products' ? 'Add New Product' : 'Add New Item'
      form(onSubmit="handleSubmit(event)")
        each column in columns.filter(item => item.field !== 'id' && item.field !== 'action' && item.field !== 'createdAt' && !item.checkboxSelection)
          .item
            label= column.headerName
            if column.field === 'img'
                <input type="file" name="file" id="file" class="inputfile"/>
            else
                input(type=column.type, placeholder=column.field)
        button(type="submit") Send

    script.

        function handleSubmit(event) {
            event.preventDefault();
            console.log('Form submitted!');
        }
